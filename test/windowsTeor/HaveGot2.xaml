                                    <TextBlock TextWrapping="Wrap" Foreground="{Binding fg}"  FontSize="{Binding s}"  Text="She's got"></TextBlock>
                                </Border>
                                <Border  BorderBrush="{Binding fg}" BorderThickness="0,0,1,1" Width="250">
                                    <TextBlock TextWrapping="Wrap" Foreground="{Binding fg}"  FontSize="{Binding s}"  Text="Has she got?"></TextBlock>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Border  BorderBrush="{Binding fg}" BorderThickness="1,0,1,1" Width="250">
