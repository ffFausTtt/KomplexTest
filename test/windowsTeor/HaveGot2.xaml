                                    <TextBlock TextWrapping="Wrap" Foreground="{Binding fg}"  FontSize="{Binding s}"  Text="He has not got"></TextBlock>
                                </Border>
                                <Border  BorderBrush="{Binding fg}" BorderThickness="0,0,1,1" Width="250">
                                    <TextBlock TextWrapping="Wrap" Foreground="{Binding fg}"  FontSize="{Binding s}"  Text="He hasn't got"></TextBlock>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
