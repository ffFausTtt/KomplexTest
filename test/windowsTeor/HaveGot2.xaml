                                    <TextBlock TextWrapping="Wrap" Foreground="{Binding fg}"  FontSize="{Binding s}"  Text="She has not got"></TextBlock>
                                </Border>
                                <Border  BorderBrush="{Binding fg}" BorderThickness="0,0,1,1" Width="250">
